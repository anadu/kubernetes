apiVersion: v1
kind: Pod
metadata:
  name: web
  labels:
    name: web
    tier: frontend
spec:
  containers:
  - image: technoworldwithsiva/web:k8
    name: web
    imagePullPolicy: Always
    ports:
    - name: web
      port: 80
---
   apiVersion: v1
   kind: Service
   metadata:
     name: mmyweb
   spec:
     type: LoadBalancer
     selector:
       name: web
       tier: frontend
     ports:
     - port: 80
       targetPort: 80
       protocol: TCP
    